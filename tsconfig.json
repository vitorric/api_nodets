{
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "moduleDetection": "force",
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "ES2023",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "incremental": true,
        "lib": [
            "ES2023"
        ],
        "paths": {
            "@core/*": [
                "./src/core/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ],
            "@application/*": [
                "src/application/*"
            ],
            "@domain/*": [
                "./src/domain/*"
            ],
            "@infra/*": [
                "./src/infra/*"
            ],
            "@interfaces/*": [
                "./src/interfaces/*"
            ],
            "@tests/*": [
                "./src/__tests__/*"
            ],
        },
        "typeRoots": [
            "node_modules/@types",
            "types/types.d.ts",
        ]
    },
}